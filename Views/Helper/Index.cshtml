@*@model IEnumerable<MvcHtmlHelpers.Models.User>*@
@using MvcHtmlHelpers.Models
@model User

@{
    ViewBag.Title = "Register";
}



<h2>Register</h2>

<form action="~/Helper/Register" method="post">
    <div class="container">
        <div class="form-group">
            @*@Html.DisplayNameFor(m => m.Age)*@
            @Html.LabelFor(m => m.Id, "Account")
            @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })
            @*<input type="text" name="id" class="form-control" required />*@
            @*@Html.TextBox("id", null, new { @class = "form-control", required = "required" })*@

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, "Password")
            @*<input type="password" name="password" class="form-control" required />*@
            @*@Html.TextBox("password", null, new { @class = "form-control", required = "required" })*@
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Age, "Age")
            @*<input type="password" name="password" class="form-control" required />*@
            @*@Html.TextBox("password", null, new { @class = "form-control", required = "required" })*@
            @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, "Email")
            @*<input type="password" name="password" class="form-control" required />*@
            @*@Html.TextBox("password", null, new { @class = "form-control", required = "required" })*@
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, "Birthday")
            @*<input type="password" name="password" class="form-control" required />*@
            @*@Html.TextBox("password", null, new { @class = "form-control", required = "required" })*@
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "date" })
        </div>
        <div>
            <button type="submit" name="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>



@*判斷是否提交表單*@
@if (Model != null)
{
    <hr />
    <div class="container">
        <ul>
            <li>@Html.DisplayNameFor(m => m.Id) : @Html.DisplayFor(m => m.Id)</li>
            <li>@Html.DisplayNameFor(m => m.Password) : @Html.DisplayFor(m => m.Password)</li>
            <li>@Html.DisplayNameFor(m => m.Age) : @Html.DisplayFor(m => m.Age)</li>
            <li>@Html.DisplayNameFor(m => m.Email) : @Html.DisplayFor(m => m.Email)</li>
            <li>@Html.DisplayNameFor(m => m.Birthday) : @Html.DisplayFor(m => m.Birthday)</li>
        </ul>
    </div>

}

